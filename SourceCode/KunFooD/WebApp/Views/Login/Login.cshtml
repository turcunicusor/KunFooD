@model WebApp.DTO.LoginDTO

@{
    ViewData["Title"] = "Login";
}

<style>
    .info_box {
        padding-right: 50px;
        margin-top: 75px;
    }

    .login_box {
        margin-top: 75px;
        padding-left: 50px;
    }

    .fixer {
        padding: 10px;
    }

    .validation-summary {
        display: none;
    }

        .validation-summary.validation-summary-errors {
            display: block;
        }
</style>

<div class="jumbotron info_box col-lg-6 col-md-6 col-sm-12 col-xs-12">
    <h1>KunFooD</h1>
    <p>Find and publish the world's best recipes in just one place, quick and easy!</p>
</div>

<form method="post" class="form-horizontal login_box col-lg-6 col-md-6 col-sm-12 col-xs-12">
    @if (Convert.ToInt32(@ViewData["Registered"]) == 1)
    {
        <div class="alert alert-dismissible alert-success">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>Account successfully registered!</strong> You can now log in using your email and password!
        </div>
    }
    <div asp-validation-summary="All" class="validation-summary alert alert-dismissible alert-danger">
    </div>
    <fieldset>
        <legend>Login</legend>
        <div class="form-group">
            <label asp-for="Email" class="col-lg-2 control-label"></label>
            <div class="col-lg-10">
                <input asp-for="Email" class="form-control">
                <span asp-validation-for="Email"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="col-lg-2 control-label"></label>
            <div class="col-lg-10">
                <input asp-for="Password" class="form-control">
                <span asp-validation-for="Password"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <input type="submit" value="Login" class="btn btn-primary">
            </div>
        </div>
    </fieldset>
</form>

<div class="clearfix visible-lg visible-md visible-sm visible-xs">
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
