
@model WebApp.DTO.HomepageDTO

@{
    ViewData["Title"] = "Home Page";
}

<style>
    .page_margin
    {
        margin-top: 50px;
    }

    .sort_box
    {
        margin-top: 40px;
    }
    .recipe-item {
        border: 1px solid #337ab7;
        margin: 10px;
        cursor: default;
        height: 100px;
    }
    .recipe-img {
        width: 75px;
        height: 75px;
        margin-left: 5px;
        margin-top: 5px;
    }
    .recipe-title {
        font-weight: bold;
        margin-left: 100px;
        margin-top: 10px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        margin-bottom: 0px;
        
    }
    .recipe-desc {
        margin-left: 100px;
    }
    .btn-recipe-desc {
        margin-left: 20px;
    }
    .radios-box {
        padding-left: 15px;
    }
</style>

<div class="page_margin">
    <form class="form-horizontal col-lg-3 col-md-3 col-sm-3 col-xs-3">
        <fieldset>
            <legend>Filter options</legend>
            <div class="form-group">
                <label class="col-lg-2 control-label">Name</label>
                <div class="col-lg-10">
                    <input type="text" class="form-control" placeholder="Name">
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label">Cost</label>
                <div class="col-lg-10">
                    <input type="number" class="form-control" placeholder="Cost">
                </div>
            </div>
            <div class="form-group">
                <label class="col-lg-2 control-label">Time</label>
                <div class="col-lg-10">
                    <input type="number" class="form-control" placeholder="Preparation Time">
                </div>
            </div>
            <div class="radios-box form-group">
                <label class="control-label">Cusine Type</label>
                <div>
                    <input type="radio" name="cusine"> Unspecified <br />
                    <input type="radio" name="cusine"> Vegan <br />
                    <input type="radio" name="cusine"> Vegetarian <br />
                    <input type="radio" name="cusine"> European <br />
                    <input type="radio" name="cusine"> Asian <br />
                    <input type="radio" name="cusine"> Chinese <br />
                    <input type="radio" name="cusine"> Japanese <br />
                    <input type="radio" name="cusine"> Mexican <br />
                    <input type="radio" name="cusine"> Italian <br />
                    <input type="radio" name="cusine"> Russian <br />
                    <input type="radio" name="cusine"> French <br />
                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-10">
                    <button type="submit" class="btn btn-primary">Filter</button>
                </div>
            </div>
        </fieldset>
    </form>

    <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
        <div class="panel panel-info sort_box">
            <div class="panel-heading">
                <h3 class="panel-title">Sort by:</h3>
            </div>
            <div class="panel-body">
                <a href="#" class="btn btn-success">Name</a>
                <a href="#" class="btn btn-success">Preparation Time</a>
                <a href="#" class="btn btn-success">Cost</a>
            </div>
        </div>

        <div class="panel panel-default">
            <div class="panel-body">
                @foreach (var recipe in Model.recipeList)
                {
                <div class="recipe-item col-lg-5 col-md-5 col-sm-5 col-xs-5">
                    <img class="recipe-img" src="~/images/recipe.png" align="left" />
                    <p class="recipe-title">@recipe.Name</p>
                    <p class="recipe-desc">Prep time: @recipe.PreparationTime mins</p>
                    <a href="@(Url.Action("Details", "Recipes", new { id = recipe.Id }))" class="btn-recipe-desc btn btn-primary btn-xs">View recipe</a>
                </div>
                }
            </div>
            <ul class="pagination">
                <li class="disabled"><a href="#">&laquo;</a></li>
                <li class="active"><a href="#">1</a></li>
                <li><a href="#">2</a></li>
                <li><a href="#">3</a></li>
                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
                <li><a href="#">&raquo;</a></li>
            </ul>
        </div>

    <div class="clearfix visible-lg visible-md visible-sm visible-xs">
    </div>
</div>

